@model Diplom.Models.Users.LoginModel

@{
    ViewBag.Title = "Вход в систему";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="login">
        <h4>Вход в систему</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="login_field">
            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @id = "userName", @class="form-control input-sm chat-input", @placeholder = "Логин" } })
            <div class="error_field">@Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })</div>
        </div>

        <div class="login_field">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @id = "userPassword", @class="form-control input-sm chat-input", @placeholder = "Пароль" } })
            <div class="error_field">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</div>
        </div>
        <div  class="wrapper">
            <span class="group-btn">
                <input type="submit" value="Войти" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Войти" />
                <a  href="@Url.Action("Registration","Account")" data-toggle="tooltip" data-placement="top" title="Зарегистрироваться">
                    <span class="btn btn-default">Регистрация
                    </span>
                </a>
            </span>
        </div>
    </div>
}